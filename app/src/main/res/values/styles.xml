<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle_Chats" parent="CardView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">@dimen/dimen_20</item>
        <item name="cardElevation">@dimen/dimen_4</item>
        <item name="cardBackgroundColor">#F3F3F3</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="TextDate_Normal" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textDate</item>
        <item name="android:textSize">@dimen/textSize_12</item>
    </style>

</resources>
