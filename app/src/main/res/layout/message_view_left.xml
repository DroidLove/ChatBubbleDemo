<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            style="@style/CardViewStyle_Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            app:cardBackgroundColor="@color/textWhite">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical"
                android:padding="@dimen/dimen_8">

                <TextView
                    android:id="@+id/message_text"
                    style="@style/TextDate_Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxWidth="@dimen/dimen_240"
                    android:text=""
                    android:autoLink="all"
                    android:textColorLink="@color/blue_900"
                    android:textSize="@dimen/textSize_14" />

                <TextView
                    android:id="@+id/message_time"
                    style="@style/TextDate_Normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dimen_16"
                    android:layout_marginTop="@dimen/dimen_4"
                    android:text="2 55 pm"
                    android:textColor="@color/chat_date_left_bubble"
                    android:textSize="@dimen/dimen_12" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>
